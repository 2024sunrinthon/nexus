{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext"],
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "Node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}